<input type="hidden" name="id" value= {{id}}>
<button type="submit">Delete Movie</button>
</form>
<form action="/movies/movieId" method="POST">
<input type="hidden" name="id" value= {{id}}>
<button type="submit">View Movie Details</button>
</form>

{{/movies}}


</ul>


</body>
</html>